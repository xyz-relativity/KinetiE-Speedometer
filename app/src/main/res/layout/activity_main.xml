        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/Speedometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ergklfdhkjgf"
            />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
